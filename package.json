{
  "name": "ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "docker-compose-test": "docker compose -f docker-compose-test.yaml",
    "docker-test": "npm run docker-compose-test -- down && npm run docker-compose-test -- up -d && (sleep 5 && npm run prisma:migrate:test)",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "test:integration": "npm run docker-test && npm t -- --config ./jest.integration.config.ts --watch",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/main",
    "start": "node -r dotenv/config dist/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:test": "dotenv -e .env.test -- npm run prisma:migrate:deploy"
  },
  "prisma": {
    "schema": "./src/infra/repo/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.0.0",
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.2.5",
    "@types/module-alias": "^2.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "dotenv": "^16.0.3",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.1.0",
    "prisma": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
