{
  "name": "ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "test:integration": "npm run docker:test:local && npm t -- --config ./jest.integration.config.ts --watch",
    "test:ci": "npm t -- --config ./jest.ci.config.ts",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/main",
    "start": "node -r dotenv/config dist/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:test": "dotenv -e .env.test -- npm run prisma:migrate:deploy",
    "docker:compose:test:local": "docker compose --env-file ./.env.test -f docker-compose-test.yaml",
    "docker:test:local": "npm run docker:compose:test:local -- down && npm run docker:compose:test:local -- up -d && (sleep 5 && npm run prisma:migrate:test)",
    "docker:compose:test:ci": "docker compose -f docker-compose-test.yaml",
    "docker:test:ci": "npm run docker:compose:test:ci -- down && npm run docker:compose:test:ci -- up -d && (sleep 5 && npm run prisma:migrate:deploy)"
  },
  "prisma": {
    "schema": "./src/infra/repo/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.332.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/multipart": "^7.6.0",
    "@prisma/client": "^4.14.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.2.1",
    "fastify": "^4.17.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "rimraf": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "dotenv": "^16.0.3",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.2",
    "prisma": "^4.14.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
