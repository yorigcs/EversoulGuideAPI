generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String         @unique
  name     String
  email    String         @unique
  password String
  picture  String
  roles    Roles          @default(user)
  Campaing CampaignTeam[]
}

enum Roles {
  admin
  user
}

model CampaignTeam {
  id         String   @unique
  stage      String
  power      String
  image      String   @unique
  nikkes     String[]
  uploaderId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  users      Users    @relation(fields: [uploaderId], references: [id])
}
